<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.android.alertbuddy.BLESettingsActivity">
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="@string/ble_settings_connected"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/connected_device_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/connected_device_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="15sp" />
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="@string/ble_settings_available"
        android:textSize="20sp" />
    <ListView
        android:id="@+id/bleList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </ListView>
</LinearLayout>